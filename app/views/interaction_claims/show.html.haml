#notice= notice
=content_for :title, @title
=content_for :header do
  %h2
    =@title
    %small drug-gene interaction summary page

.container-fluid
  .row-fluid
    .span12
      .hero-unit
        %p
          %b Drug:
          =link_to @drug.name, "/drug_claims/#{@drug.name}"
        %p
          %b Gene:
          =link_to @gene.name, "/gene_claims/#{@gene.source_db_name}/#{@gene.name}"
          ="("
          =link_to "#{@gene_alt_names[0]}", "/genes/#{@gene_alt_names[0]}"  
          =")"
        %p
          %b Source Database Name:
          =link_to @interaction.source.source_db_name, source_path(@interaction.source.source_db_name)
        %p
          %b Source Database Version:
          =@interaction.source.source_db_version
        %p
          %b Types:
          %table.table.table-striped
            -@interaction.interaction_claim_types.each do |type|
              %tr
                %td=type.type
        %p
          %b Attributes:
          %table.table.table-striped
            -@interaction.interaction_claim_attributes.each do |attribute|
              %tr
                %td=attribute.name
                %td=attribute.value
        %p
          %b Citation:
          %p=@interaction.source.citation
