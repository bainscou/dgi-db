%tr
  %td
    =interaction_table_row.search_term
  -if interaction_table_row.found_gene?
    %td{title: interaction_table_row.gene_name + ' - ' + interaction_table_row.gene_long_name}
      = link_to gene_path(interaction_table_row.gene_name) do
        %strong
          = interaction_table_row.gene_name
        = " - "
        %em
          %small
            =truncate(interaction_table_row.gene_long_name, length: 50)
    -if(interaction_table_row.found_interaction?)
      %td{title: interaction_table_row.drug_claim_name}
        =link_to truncate(interaction_table_row.drug_claim_name, length:50), drug_claim_path(interaction_table_row.interaction_claim.drug_claim.name)
      %td
        =link_to interaction_table_row.types_string, interaction_claims_path(interaction_table_row.interaction_claim)
      %td
        =link_to interaction_table_row.source_db_name, source_path(interaction_table_row.source_db_name)
    -else 
      %td 
        %em
          (no interactions)
      %td - 
      %td -
  -else
    %td(style="color:red") 
      no gene found!
    %td -
    %td -
    %td -

